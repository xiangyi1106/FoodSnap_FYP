# Server configuration
PORT=8000

# MongoDB database connection URL
DATABASE_URL=<your-mongodb-url>

# JWT secret for signing and verifying tokens
# Generate a secure, random string (e.g., using an online generator)
TOKEN_SECRET=<your-secret-key-for-jwt>

# Cloudinary credentials for handling image uploads
CLOUD_NAME=<your-cloudinary-cloud-name>
CLOUD_API_KEY=<your-cloudinary-cloud-api-key>
CLOUD_API_SECRET=<your-cloudinary-cloud-api-secret>

# Google Gemini API key for AI-powered suggestions
GOOGLE_GEMINI_AI_API_KEY=<your-google-gemini-ai-api-key>
